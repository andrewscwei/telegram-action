{
  "name": "telegram-action",
  "version": "1.1.1",
  "description": "A GitHub Action for sending build status alerts to a Telegram chat",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "test": "npm run test:unit",
    "test:unit": "mocha -r dotenv/config --config=./.mocharc \"src/\"",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewscwei/telegram-action"
  },
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "chai": "^5.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.4.0",
    "mocha": "^10.4.0",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.10"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "node-fetch": "^3.3.2"
  }
}
