{
  "name": "telegram-action",
  "version": "1.1.0",
  "description": "A GitHub Action for sending build status alerts to a Telegram chat",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "test": "npm run test:unit",
    "test:unit": "mocha -r dotenv/config --config=./.mocharc \"src/\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewscwei/telegram-action"
  },
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^5.0.3",
    "dotenv": "^16.4.1",
    "eslint": "^8.56.0",
    "mocha": "^10.3.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "node-fetch": "^3.3.2"
  }
}
